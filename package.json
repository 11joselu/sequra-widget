{
  "name": "sequra",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "api": "cd api/ && npm start",
    "predev": "npm run api &",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "prepare": "husky",
    "test": "vitest",
    "postinstall": "cd api && npm install",
    "premerchant:preview": "npm run build && cp -r dist merchant-site && npm run predev",
    "merchant:preview": "http-server merchant-site -p 3000 -o product-page.html"
  },
  "devDependencies": {
    "@eslint/css": "^0.8.1",
    "@eslint/js": "^9.27.0",
    "@eslint/markdown": "^6.4.0",
    "@faker-js/faker": "^9.8.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "nock": "^14.0.4",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
